@model IEnumerable<BasicASPTutorial.Models.Student>; //ใช้ IEnumerable เพื่อมาครอบความเป็น Model หลายๆข้อมูล
@{
    ViewData["Title"] = "หน้าแรก";
}

@if ( Model.Count() > 0 ) {
<h1 class="text-center">หน้าแรกของเว็บไซต์</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th>รหัสนักเรียน</th>
            <th>ชื่อนักเรียน</th>
            <th>คะแนนสอบ</th>
            <th>เกณฑ์</th>
            <th>แก้ไข</th>
            <th>ลบ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Score</td>
                <td>
                    @if (student.Score >= 50)
                    {
                        <strong class="text-success">สอบผ่าน</strong>
                    }
                    else
                    {
                        <strong class="text-danger">สอบไม่ผ่าน</strong>
                    }
                    <hr />
                </td>
                <td>
                    <a class="btn btn-warning"
                       asp-controller="Student"
                       asp-action="Edit"
                       asp-route-id="@student.Id">
                        แก้ไข
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger"
                       asp-controller="Student"
                       asp-action="Delete"
                       asp-route-id="@student.Id"
                       onclick="return confirm('คุณต้องการลบ @student.Name หรือไม่ ?')">
                        ลบ
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

